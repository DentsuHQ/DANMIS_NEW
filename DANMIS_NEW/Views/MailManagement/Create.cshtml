@model MailManagementViewModel
@{
    var auth = UnobtrusiveSession.Session["Auth"] as IList<Auth>;
    var action = ViewContext.RouteData.Values["action"] as string;
    var function = auth.First(x => x.Code == "MailManagement" + action);
    ViewBag.Title = function.ModuleName + " / " + function.GroupName + " / " + function.SimpleName;
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        // 選項變動項目
        var value = $('.selectpicker option:selected').val();
        if (value == "1") {
            $('#Classify').show();
            $('#Space').hide();
        }
        else if (value == "2") {
            $('#Classify').hide();
            $('#Space').show();
        }
        else {
            $('#Classify').show();
            $('#Space').hide();
        }

        $('#Functions.selectpicker').on('change', function () {
            var selected = $('.selectpicker option:selected').val();            
            if (selected == "1") {
                $('#Classify').show();
                $('#Space').hide();
            }            
            else {
                $('#Classify').hide();
                $('#Space').show();
            }
        });


    </script>
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <a href="#">@function.ModuleName</a>
            </li>
            <li>
                @Html.ActionLink(function.GroupName, "Index")
            </li>
            <li class="active">
                <strong>@function.SimpleName</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    @using (Html.BeginForm(action, "MailManagement", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "create_form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.SequenceNo)
                        @Html.HiddenFor(model => model.ID)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Functions, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-4">
                                @Html.DropDownListFor(model => model.Functions, Model.FunctionsList, string.Format(Resource.PleaseSelect, Resource.Function), new { @class = "form-control selectpicker" })
                                @Html.ValidationMessageFor(model => model.Functions, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group" id="Classify">
                            @Html.LabelFor(model => model.Classify, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-4">
                                @Html.DropDownListFor(model => model.Classify, Model.ClassifyList, string.Format(Resource.PleaseSelect, Resource.Classify), new { @class = "form-control selectpicker" })
                                @Html.ValidationMessageFor(model => model.Classify, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group" id="Space">
                            @Html.LabelFor(model => model.Space, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-4">
                                @Html.DropDownListFor(model => model.Space, Model.SpaceList, string.Format(Resource.PleaseSelect, Resource.SpaceName), new { @class = "form-control selectpicker" })
                                @Html.ValidationMessageFor(model => model.Space, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-4">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Mail, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-4">
                                @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-sm-2" })
                            <div class="col-sm-4">
                                <div class="checkbox">
                                    <label>
                                        @Html.EditorFor(model => model.Status)
                                    </label>
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" id="form_submit" class="btn btn-primary"><i class="fa fa-plus"></i> @Resource.Save</button>
                                @*<button type="reset" class="btn btn-default"><i class="fa fa-eraser"></i> @Resource.Reset</button>*@
                                <a id="exit_btn" href="@Url.Action("Index")" class="btn btn-danger"><i class="fa fa-sign-out"></i> @Resource.Exit</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
